// 结构体定义 — 普通字段、字段访问、结构体实例化

struct Point {
    x: i32,
    y: i32,
}

struct Color {
    r: u8,
    g: u8,
    b: u8,
}

func main() -> i32 {
    // 基本结构体字段访问
    var p = Point { x: 3, y: 4 }
    @assert(p.x == 3, "7.1 struct: field x")
    @assert(p.y == 4, "7.1 struct: field y")
    @assert(p.x + p.y == 7, "7.1 struct: field sum")

    // 多字段结构体
    var c = Color { r: 255, g: 128, b: 0 }
    @assert(c.r == 255, "7.1 struct: Color.r")
    @assert(c.g == 128, "7.1 struct: Color.g")
    @assert(c.b == 0, "7.1 struct: Color.b")

    return 0
}
