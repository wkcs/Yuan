// 注释在不同上下文中
func function_with_comments(
    // 参数注释
    param1: i32, // 第一个参数
    param2: str  /* 第二个参数 */
) -> i32 {
    // 函数体注释
    var local = param1 /* 局部变量 */
    
    // 控制流中的注释
    if local > 0 {
        // if 分支注释
        return local * 2
    } else {
        /* else 分支注释 */
        return 0
    }
    
    // 这行代码永远不会执行
}

// 结构体中的注释
struct CommentedStruct {
    // 字段前的注释
    field1: i32, // 字段后的注释
    
    /* 块注释字段 */
    field2: str,
    
    /// 文档注释字段
    field3: bool,
}

// 枚举中的注释
enum CommentedEnum {
    // 变体注释
    Variant1, // 第一个变体
    
    /* 块注释变体 */
    Variant2(i32),
    
    /// 文档注释变体
    Variant3 { field: str },
}

// 实现块中的注释
impl CommentedStruct {
    // 方法注释
    func method(&self) -> i32 {
        // 方法体注释
        return self.field1
    }
}

