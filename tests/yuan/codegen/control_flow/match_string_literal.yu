// 字符串 match 语义回归测试：应按内容比较，不应按指针比较

func classify(s: str) -> i32 {
    return match s {
        "hello" => 1,
        "world" => 2,
        _ => 3,
    }
}

func main() -> i32 {
    var a = classify("hello")
    var b = classify("world")
    var c = classify("other")

    @assert(a == 1, "match string literal failed: hello")
    @assert(b == 2, "match string literal failed: world")
    @assert(c == 3, "match string literal failed: fallback")

    return 0
}
