{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Yuan",
  "scopeName": "source.yuan",
  "fileTypes": [
    "yu"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#multiline-string"
    },
    {
      "include": "#raw-string"
    },
    {
      "include": "#string"
    },
    {
      "include": "#char"
    },
    {
      "include": "#builtin"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#symbols"
    },
    {
      "include": "#type-keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#type-identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.yuan",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.yuan",
          "match": "//.*$"
        },
        {
          "name": "comment.block.yuan",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.yuan"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.yuan"
            }
          }
        }
      ]
    },
    "multiline-string": {
      "name": "string.quoted.triple.yuan",
      "begin": "\"\"\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.yuan"
        }
      },
      "end": "\"\"\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.yuan"
        }
      },
      "patterns": [
        {
          "include": "#escape-sequence"
        }
      ]
    },
    "raw-string": {
      "name": "string.quoted.raw.yuan",
      "begin": "\\br(#{0,16})\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.yuan"
        }
      },
      "end": "\"\\1",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.yuan"
        }
      }
    },
    "string": {
      "name": "string.quoted.double.yuan",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.yuan"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.yuan"
        }
      },
      "patterns": [
        {
          "include": "#escape-sequence"
        }
      ]
    },
    "char": {
      "name": "string.quoted.single.yuan",
      "begin": "'",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.yuan"
        }
      },
      "end": "'",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.yuan"
        }
      },
      "patterns": [
        {
          "include": "#escape-sequence"
        }
      ]
    },
    "escape-sequence": {
      "name": "constant.character.escape.yuan",
      "match": "\\\\(?:[\"'\\\\nrt0]|x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f_]+\\})"
    },
    "builtin": {
      "name": "support.function.builtin.yuan",
      "match": "@[A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*\\b"
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.function.declaration.yuan",
          "match": "\\b(func)\\s+([A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*)",
          "captures": {
            "1": {
              "name": "storage.type.function.yuan"
            },
            "2": {
              "name": "entity.name.function.yuan"
            }
          }
        },
        {
          "name": "meta.type.declaration.yuan",
          "match": "\\b(struct|enum|trait|type)\\s+([A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*)",
          "captures": {
            "1": {
              "name": "storage.type.yuan"
            },
            "2": {
              "name": "entity.name.type.yuan"
            }
          }
        },
        {
          "name": "meta.variable.declaration.yuan",
          "match": "\\b(var|const)\\s+([A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*)",
          "captures": {
            "1": {
              "name": "storage.modifier.yuan"
            },
            "2": {
              "name": "variable.other.definition.yuan"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.yuan",
          "match": "\\b(var|const|func|struct|enum|trait|type|impl)\\b"
        },
        {
          "name": "keyword.control.yuan",
          "match": "\\b(if|elif|else|match|while|loop|for|in|break|continue|return|defer|await|orelse)\\b"
        },
        {
          "name": "keyword.other.yuan",
          "match": "\\b(as|where)\\b"
        },
        {
          "name": "storage.modifier.yuan",
          "match": "\\b(pub|priv|internal|async|mut|ref|ptr)\\b"
        },
        {
          "name": "variable.language.yuan",
          "match": "\\b(self|Self)\\b"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "meta.enum.variant.qualified.yuan",
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\s*(\\.)\\s*([A-Z][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "entity.name.type.yuan"
            },
            "2": {
              "name": "punctuation.accessor.dot.yuan"
            },
            "3": {
              "name": "constant.other.enum-member.yuan"
            }
          }
        },
        {
          "name": "entity.name.function.member.yuan",
          "match": "(\\.)\\s*([A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "punctuation.accessor.dot.yuan"
            },
            "2": {
              "name": "entity.name.function.member.yuan"
            }
          }
        },
        {
          "name": "entity.name.function.call.yuan",
          "match": "\\b(?!if\\b|elif\\b|else\\b|match\\b|while\\b|for\\b|loop\\b|return\\b|func\\b|struct\\b|enum\\b|trait\\b|impl\\b|var\\b|const\\b)([A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.call.yuan"
            }
          }
        },
        {
          "name": "constant.other.enum-member.yuan",
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "constant.other.enum-member.yuan"
            }
          }
        },
        {
          "name": "meta.struct.literal.yuan",
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\s*(?=\\{)",
          "captures": {
            "1": {
              "name": "entity.name.type.yuan"
            }
          }
        },
        {
          "name": "variable.other.member.yuan",
          "match": "\\b([A-Za-z_\\p{L}][A-Za-z0-9_\\p{L}\\p{N}]*)\\s*(?=:)",
          "captures": {
            "1": {
              "name": "variable.other.member.yuan"
            }
          }
        }
      ]
    },
    "type-keywords": {
      "name": "storage.type.primitive.yuan",
      "match": "\\b(void|i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize|f32|f64|bool|char|str)\\b"
    },
    "constants": {
      "name": "constant.language.yuan",
      "match": "\\b(true|false|None)\\b"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.hex.yuan",
          "match": "\\b0[xX][0-9A-Fa-f](?:_?[0-9A-Fa-f])*(?:i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        },
        {
          "name": "constant.numeric.integer.octal.yuan",
          "match": "\\b0[oO][0-7](?:_?[0-7])*(?:i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        },
        {
          "name": "constant.numeric.integer.binary.yuan",
          "match": "\\b0[bB][01](?:_?[01])*(?:i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        },
        {
          "name": "constant.numeric.float.yuan",
          "match": "\\b\\d(?:_?\\d)*(?:\\.\\d(?:_?\\d)*|[eE][+-]?\\d(?:_?\\d)*)(?:f32|f64)?\\b"
        },
        {
          "name": "constant.numeric.integer.decimal.yuan",
          "match": "\\b\\d(?:_?\\d)*(?:i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.yuan",
          "match": "\\.\\.\\.|\\.\\.=|\\.\\.|=>|->|\\?\\.|<<=|>>=|==|!=|<=|>=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|&&|\\|\\||<<|>>|[+\\-*/%&|^~!=<>?:]"
        },
        {
          "name": "punctuation.separator.yuan",
          "match": "::|[,;:]"
        },
        {
          "name": "punctuation.section.brackets.begin.yuan",
          "match": "[\\[\\(\\{]"
        },
        {
          "name": "punctuation.section.brackets.end.yuan",
          "match": "[\\]\\)\\}]"
        },
        {
          "name": "punctuation.accessor.dot.yuan",
          "match": "(?<!\\.)\\.(?!\\.)"
        }
      ]
    },
    "type-identifiers": {
      "name": "entity.name.type.yuan",
      "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
    }
  }
}
